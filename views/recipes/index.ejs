<%- include('../partials/header') %>
  <h2><%= title %></h2>
  <a href="/recipes/new">Add new recipe</a>
  <section class="m-2">
    <% recipes.forEach((r) => { %>
      <div class="card">
        <div class="container">
          <h4><b><%= r.name %></b></h4>
          <p><%= r.ingredients.join(', ') %></p>
          <a href="/recipes/<%= r._id %>">Details</a>
        </div>
      </div>
    <% }) %>
  </section>
  <%- include('../partials/footer') %>