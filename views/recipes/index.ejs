<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h2><%= title %></h2>
  <a href="/recipes/new">Add new recipe</a>
  <section>
    <% recipes.forEach((r) => { %>
      <div class="card">
        <div class="container">
          <h4><b><%= r.name %></b></h4>
          <p><%= r.ingredients.join(', ') %></p>
          <a href="/recipes/<%= r._id %>">Details</a>
        </div>
      </div>
    <% }) %>
  </section>
</body>
</html>